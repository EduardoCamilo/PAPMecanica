@model IEnumerable<BaseModels.TipoDefeito>

@{
    ViewBag.Title = "Criar defeito";
}

<h2>Defeito</h2>

<p>
    @Html.ActionLink("Criar novo defeito", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.TipoDefeitoID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.TipoDefeitoID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.TipoDefeitoID })
        </td>
    </tr>
}

</table>
