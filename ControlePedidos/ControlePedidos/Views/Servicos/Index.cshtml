@model IEnumerable<BaseModels.Servico>

@{
    ViewBag.Title = "Serviços";
}

<h2>@ViewBag.Title</h2>

<p>
    
    @Html.ActionLink("Cadastrar um novo Serviço", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._Automovel.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._TipoDefeito.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item._Automovel.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._TipoDefeito.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Ediar", "Edit", new { id=item.ServicoID }, htmlAttributes: new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Detalhes", "Details", new { id=item.ServicoID }, htmlAttributes: new { @class = "btn btn-primary" })
            @Html.ActionLink("Excluir", "Delete", new { id=item.ServicoID }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
